{
  "trailingComma": "none",
  "tabWidth": 2,
  "useTabs": true,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 80,
  "proseWrap": "always",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/components/(.*)$",
    "^@/hooks/(.*)$",
    "^@/utils/(.*)$",
    "^@/types/(.*)$",
    "^@/lib/(.*)$",
    "^@/screens/(.*)$",
    "^@/providers/(.*)$",
    "^(?!.*\\.css$)(../.*)$",
    "^(?!.*\\.css$)(./.*)$",
    ".*\\.css$"
  ],
  "importOrderSeparation":true,
  "importOrderSortSpecifiers":true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}